{
  "compilerOptions": {
    /* ---------- Básico ---------- */
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",

    /* ---------- Qualidade / Build ---------- */
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "forceConsistentCasingInFileNames": true,

    /* ---------- Resolução ---------- */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    /* ---------- Alias ------------ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "react": ["./node_modules/react"],
      "react/*": ["./node_modules/react/*"]
    },

    /* ---------- Plugins ---------- */
    "plugins": [
      { "name": "next" }
    ],
    "types": ["next", "next-auth", "node", "react", "react-dom", "recharts"]
  },

  "include": [
    "next-env.d.ts",
    "react-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ],

  "exclude": ["node_modules"]
}
